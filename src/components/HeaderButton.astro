---
interface Props {
    routeLink: string;
}
const { routeLink } = Astro.props;
---

<a
    href={routeLink}
    class="text-center px-4 py-3 rounded-lg text-red-500 hover:bg-red-500 hover:text-white hover:scale-110 transition-all duration-200"
>
    <slot name="before" />
    <slot>
        <span class="hidden md:inline">Default link</span>
    </slot>
    <slot name="after" />
</a>
